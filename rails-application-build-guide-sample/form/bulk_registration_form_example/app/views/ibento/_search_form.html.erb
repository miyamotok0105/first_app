<%= render layout: 'shared/search_box' do %>

<div class="row">
<div class="col-sm-6">
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">イベント名</label>
    <div class="col-sm-8">
      <%= f.text_field :ibento, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">イベント日</label>
    <div class="col-sm-8">
      <%= f.text_field :kaisaibi, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-4 control-label" for="">イベント時間</label>
    <div class="col-sm-8">
      <%= f.text_field :kaisaijikan, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="col-sm-6">
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">値段</label>
    <div class="col-sm-8">
      <%= f.text_field :price, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label" for="">場所</label>
    <div class="col-sm-8">
      <%= f.text_field :basho, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="col-sm-12 row text-center">
  <%= link_to ibento_path, class: 'btn btn-default btn-left' do %>クリア<% end %>
  <button class="btn btn-default btn-primary" type="submit"><i class="fa fa-search"></i> 検索</button>
</div>

</div>

<% end %>
